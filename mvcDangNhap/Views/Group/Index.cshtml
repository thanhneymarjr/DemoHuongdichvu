@model IEnumerable<mvcDangNhap.Models.UserGroup>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "Group", FormMethod.Get))
{
    <a class="btn btn-primary" href="~/Category/Create">Thêm mới</a>

}
@section scripts{

    <script src="~/Scripts/Controllers/UserGroup.js"></script>
}
<div class="form-group">
    <label for="txtsearch">Search</label>
    <input type="text" class="form-control" id="txtsearch" name="txtsearch" />
</div>
<div>
    <table class="table-bordered table-hover">
        <thead>

            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody id="result">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td><a href="~/Group/Edit/@item.ID">Sửa</a></td>

                    <td>
                        <a href="~/Group/Delete/@item.ID">Xóa</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>