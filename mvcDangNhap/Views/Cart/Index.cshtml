@model List<mvcDangNhap.Models.CartItem>
@{
    ViewBag.Title = "Gio hang";
   
}

@section scripts{

    <script src="~/Scripts/Controllers/cartController.js"></script>
}
<h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.product.id</td>
                            <td>@item.product.name</td>
                            <td><img src="~/Upload/Products/@item.product.image" /></td>
                            <td><input type="number" class="txtQuantity" data-id="@item.product.id" value="@item.Quantity" /></td>
                            <td>@item.product.unit_price</td>
                            <td>@(Convert.ToDecimal(item.product.unit_price * item.Quantity))</td>
                            <td><a href="#" data-id="@item.product.id" class="btn-delete">Xoá</a></td>
                        </tr>
                    }

                </tbody>
            </table>

            <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn">Xoá giỏ hàng</button>
            <button id="btnPayment" class="btn">Thanh toán</button>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }

    </div>
</div>
