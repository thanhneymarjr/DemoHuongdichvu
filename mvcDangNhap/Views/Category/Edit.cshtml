@model  mvcDangNhap.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa</h2>
@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    
    <div class="form-group">
        <label for="Name">Tên danh mục</label>
        <input type="text" class="form-control" value="@Model.Name" name="Name" />
    </div>

    <div class="form-group">

        <button type="submit" class="btn btn-success " value="Lưu">Lưu</button>
        <span class="text-danger">@ViewBag.StatusMessage</span>
    </div>

}

<div>
    @Html.ActionLink("Quay về danh sách", "Index")
</div>



